<div id="<%= dom_id article %>">
  <p>
    <strong>Title:</strong>
    <%= article.title %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= article.content %>
  </p>

  <% Like.glyphs.each do |glyph, sym| %>
    <%= button_to sym, article_like_path(article), method: :put, params: { glyph: glyph } %>
  <% end %>
  <%= button_to "❌", article_like_path(article), method: :delete %>


</div>
