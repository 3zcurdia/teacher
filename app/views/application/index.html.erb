<%= content_for(:title, "Chunky Bacon") %>

<% @articles.each do |article| %>
  <h2 class="title is-4"><%= article.title %></h2>
  <h4 class="sub-title is-4" data-controller="time" data-time-timestamp-value="<%= article.published_at.iso8601 %>"></h4>

   <p class="content">
     <%= truncate article.content, length: 128 %>
   </p>
 <% end %>
